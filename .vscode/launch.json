{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch flatpak Brave â€“ Angular",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}",
      "runtimeExecutable": "/usr/bin/flatpak", // adjust to your Brave executable
      "runtimeArgs": [
        "run",
        "com.brave.Browser",
        "--remote-debugging-port=9222",
        "--user-data-dir=${workspaceFolder}/.vscode/brave-profile"
      ],
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "${workspaceFolder}/node_modules/**/*.mjs",
        "${workspaceFolder}/node_modules/**/*.ts",
      ]
    },
    {
      "name": "Attach to Chrome",
      "type": "chrome",
      "port": 9222,
      "request": "attach",
      "webRoot": "${workspaceFolder}",
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "${workspaceFolder}/node_modules/**/*.mjs",
        "${workspaceFolder}/node_modules/**/*.ts",
      ]
    },
    {
      "name": "ng serve",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: start",
      "url": "http://localhost:4200/"
    },
    {
      "name": "ng test",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: test",
      "url": "http://localhost:9876/debug.html"
    }
  ]
}
